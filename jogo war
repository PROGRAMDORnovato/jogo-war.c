#include <stdio.h>

#define QTD_TERRITORIOS 5  // define o número máximo de territórios

// definição da estrutura Territorio
struct Territorio {
    char nome[30];  // nome do território
    char cor[10];   // cor do exército
    int tropas;     // quantidade de tropas
};

int main() {
    struct Territorio territorios[QTD_TERRITORIOS];  // cria um vetor de 5 territórios

    // loop para cadastrar os 5 territórios
    for (int i = 0; i < QTD_TERRITORIOS; i++) {
        printf("\n=== Cadastro do território %d ===\n", i + 1);
        
        // lê o nome do território
        printf("Nome: ");
        scanf(" %[^\n]", territorios[i].nome);  // lê string com espaço
        
        // lê a cor do exército
        printf("Cor do exército: ");
        scanf(" %[^\n]", territorios[i].cor);
        
        // lê a quantidade de tropas
        printf("Quantidade de tropas: ");
        scanf("%d", &territorios[i].tropas);
    }

    // exibe os dados de todos os territórios cadastrados
    printf("\n===== Territórios cadastrados =====\n");
    for (int i = 0; i < QTD_TERRITORIOS; i++) {
        printf("\nTerritório %d:\n", i + 1);
        printf("Nome: %s\n", territorios[i].nome);
        printf("Cor: %s\n", territorios[i].cor);
        printf("Tropas: %d\n", territorios[i].tropas);
    }

    return 0;  // fim do programa
}

